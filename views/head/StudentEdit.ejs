<% layout("/layouts/boilerplate.ejs") %>
<body>
    
    <div class=" col-8 offset-2 mt-3">
        <h2>Edit details of :- "<b><%= result.name%></b>"</h2>
        <hr>
    </div>
        
    <div class="col-8 offset-2 mt-3 mb-3">
        <form method="post" action="/attendance/head/studentsInfo/<%= result._id %>/edit?_method=PUT " class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Name:</label>
                <input type="text" name="Student[name]" value="<%= result.name %>" class="form-control" required>
                <div class="invalid-feedback">please enter the name</div>
            </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="text" name="Student[email]" value="<%= result.email %>" class="form-control" required>
            <div class="invalid-feedback">please enter the email</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="text" name="Student[password]" value="<%= result.password %>" class="form-control" required>
            <div class="invalid-feedback">please enter the password</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Confirm Password:</label>
            <input type="text" name="Student[cpass]" value="<%= result.password %>" class="form-control" required>
            <div class="invalid-feedback">please enter the Confirm password</div>
        </div>
        <div class="mb-3">
            <label for="collegeid" class="form-label">College Id :</label>
            <input type="text" name="Student[collegeid]" class="form-control" required>
            <div class="invalid-feedback">please enter the Confirm password</div>
        </div>
            <div class="mb-3">
                <label for="year" class="form-label">Year:</label>
                <input type="text" name="Student[year]" value="<%= result.year %>" class="form-control" required>
                <div class="invalid-feedback">please enter the year of the student</div>
            </div>
            <div class="mb-3">
                <label for="dob"  class="form-label">DOB:</label>
                <input type="text" name="Student[dob]" value="<%= result.dob %>" class="form-control" required>
                <div class="invalid-feedback">please enter the valid Date of birth</div>
            </div>
            
            <button class="btn btn-outline-dark">submit</button>
        </form>
    
    
    </div>
</body>
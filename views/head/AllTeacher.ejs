<% layout("/layouts/boilerplate.ejs") %>

<div class="mt-3 col-10 offset-1">
    <h4>All Teachers</h4>
    <hr>
</div>

<div class="mt-3 mb-3 col-10 offset-1">

    <table class="table table-striped">

        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>DOB</th>
            <th>Work-Experience</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% for(teacher of allTeachers){ %>
            <tr>
                <td><%= teacher.username %></td>
                <td><%= teacher.email %></td>
                <td><%= teacher.dob %></td>
                <td><%= teacher.workingExperience %></td>
                <td><a href="/attendance/head/teachersInfo/<%= teacher._id %>/edit"> <button class="btn btn-dark">Edit</button></a></td>
                <td><a href="/attendance/head/teachersInfo/<%= teacher._id %>/delete"><button class="btn btn-dark">Delete</button></a></td>
            </tr>
        <% } %>
    </table>

</div>
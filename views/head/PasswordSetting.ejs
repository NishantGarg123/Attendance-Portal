<% layout("/layouts/boilerplate.ejs") %>

<div class="col-10 mt-3 mb-3">

    <h4>Welcome "<b><%= admin.name %></b>" to Change password </h4>
    <h6>Note: After changing the password the person can login only with the new password</h6>
        <hr>
</div>


<div class="col-10 offset-1 mt-3 mb-3">

    <form method="post" action="/attendance/head/passwordSetting?_method=PUT  ">

        <div class="col-8 offset-1 mt-3 mb-3">
            <label for="studentPass" class="form-label">Student Password:</label>
            <input type="text" name="Admin[studentPass]" value="<%= admin.studentPass %>" class="form-control" required>
            <div class="invalid-feedback">student password can not be null</div>
        </div>
        <div class="col-8 offset-1 mt-3 mb-3">
            <label for="teacherPass" class="form-label">Teacher Password:</label>
            <input type="text" name="Admin[teacherPass]" value="<%= admin.teacherPass %>" class="form-control" required>
            <div class="invalid-feedback">teacher password can not be null</div>
        </div>

        <div class="col-8 offset-1 mt-3 mb-3">
            <label for="adminPass" class="form-label">Admin Password:</label>
            <input type="text" name="Admin[adminPass]" value="<%= admin.adminPass %>" class="form-control" required>
            <div class="invalid-feedback">admin password can not be null</div>
        </div>

      <button class=" offset-1 btn  btn-dark mb-3 submitAlert ">Edit the passwords</button>
    </form>

</div>

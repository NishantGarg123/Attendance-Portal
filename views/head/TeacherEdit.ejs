<% layout("/layouts/boilerplate.ejs") %>

<div class="mt-3 mb-3 col-8 offset-1">
    <h4>Edit Details of :- <%=teacherDetails.name %></h4>
    <hr>
</div>

<div class="mb-3 col-8 offset-1">

    <form method="post" action="/attendance/head/teachersInfo/<%= teacherDetails._id %>/edit?_method=PUT " class="needs-validate" novalidate>
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" name="Teacher[name]" id="" value="<%= teacherDetails.name %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" name="Teacher[email]" value="<%= teacherDetails.email %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="text" name="Teacher[password]" value="<%= teacherDetails.password %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="cpassword" class="form-label">confirm Password:</label>
            <input type="text" name="Teacher[cpassword]" value="<%= teacherDetails.password %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="collegeid" class="form-label">College Id password:</label>
            <input type="text" name="Teacher[collegeid]"  class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="dob" class="form-label">DOB:</label>
            <input type="date" name="Teacher[dob]" value="<%= teacherDetails.dob %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="workingExperience" class="form-label">Work-Experience:</label>
            <input type="text" name="Teacher[workingExperience]" value="<%= teacherDetails.workingExperience %>" class="form-control" required>
        </div>
      
        <button class="btn btn-outline-dark">Submit</button>
    </form>

</div>
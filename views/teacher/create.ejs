<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <h2>Welcome You are going to create a faculty member account -</h2><br>

        <div class="row">
            <div class="col-8 ">
                <form method="post" action="/attendance/Tcreate">
                    <div class="mb-3">
                        <label for="name">Name :</label>
                        <input type="text" placeholder="enter your name" name="name" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="email">email :</label>
                        <input type="email" placeholder="enter your email" name="email" class="form-control">
                    </div>

                    <div class="row">

                        <div class="mb-3 col-md-6">
                            <label for="password">Password :</label>
                            <input type="password" placeholder="enter your password" name="password" class="form-control">
                        </div>
    
                        <div class="mb-3 col-md-6">
                            <label for="password">Confirm Password :</label>
                            <input type="password" placeholder="enter your Confirm password" name="cpassword"
                                class="form-control">
                        </div>

                    </div>
                    <div class="mb-3">
                        <label for="dob">DOB :</label>
                        <input type="date" placeholder="enter your date of birth" name="dob" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="dob">College id :</label>
                        <input type="password" placeholder="enter your college id" name="collegeid"
                            class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="workingExperience">Experience :</label><br>
                        <textarea name="workingExperience" rows="5" cols="30" class="form-control"></textarea><br>
                    </div>
            </div>
        </div>

        <button class="btn btn-dark">submit</button><br><br>
        </form>
    </body>
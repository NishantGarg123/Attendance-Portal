<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h1>Attendance of <%= subjectName %></h1>
    <hr>
        <h4>Total lecture = <%= result.length %></h4>
        <% let i=0; %>
        <% for(res of result){ %>
            <% if(res.present == true){
                i++;
            } %>
        <% } %>
        <h4>Attempt lecture = <%= i  %></h4>
        <h4>Percentage of attendance = <%= (i/(result.length))*100  %> %</h4>
        <hr>   
<!-- ======================================================================================================================>>> --> 
<!-- if not present -->
        <h2>
            <% if(result.length == 0){ %>
                
                <div class="p-3 text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-3">
                    <h2>No attendance found</h2>
                  </div>
                <% } %>
        </h2>

<!-- ======================================================================================================================>>> -->


<!-- ======================================================================================================================>>> -->
 <!-- if attendance present -->
        <% if(result.length !=0){ %>
            <table class="table table-dark ">
                <tr>
                    <th>Date</th>
                    <th>Present</th>
                    <th>marked by</th>
                </tr>
            <% for(res of result){ %>
                <tr class="table-info">
                    <% for(teacher of teacherResult) {%>
                        <% if((teacher._id)==(res.marked_by)){ %> 
                            <% if(res.present == true){ %>
                                <% let date =(res.date)  %>
                                <td class="table-info"><%= date  %></td>   
                                <td class="table-info"><input type="checkbox" checked></td>
                                <td class="table-info"><%= teacher.name %></td>
                            <% } %>
                            <% if(res.present == false){ %>
                                <% let date =(res.date)  %>
                                <td class="table-danger"><%= date  %></td>   
                                <td class="table-danger"><input type="checkbox"></td>
                                <td class="table-danger"><%= teacher.name %></td>
                            <% } %>
                            
                        <% } %>
                    <% } %>
                </tr>
            <% } %>
        <% } %>
        </table>
<!-- ======================================================================================================================>>> -->  
    
</body>

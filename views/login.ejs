    <body>

        <div class="row mt-3 mb-3 offset-2">
            <h2>Student</h2>
            <form method=POST action="/attendance/login" class="needs-validation" novalidate>
                <div class="col-8">
                    <div class="mb-3">
                        <label class="form-label" for="username">username</label>
                        <input type="text" placeholder="enter your name" name="username" class="form-control" required>
                        <div class="invalid-feedback">please entre the valid name</div>

                        <div class="mb-3">
                            <label class="form-label" for="pass">Password</label>
                            <input type="password" name="password" placeholder="enter your password" class="form-control "
                                required>
                            <div class="invalid-feedback">please enter the valid password</div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-dark">submit</button>
               <a class="btn btn-outline-dark  ms-4" href="/attendance/Tlogin" class="create-acc">I am aTeacher</a>
            </form>
           
        </div>
    </body>